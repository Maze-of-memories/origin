<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="#ff242424">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/multi_game_sq"
        android:visibility="invisible"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_goal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/marker"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:focusableInTouchMode="false"
        android:layout_margin="15dp"
        android:visibility="visible"
        android:src="@drawable/left_marker"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/direction_marker"
        android:src="@drawable/arrow_up"
        android:layout_margin="15dp"
        android:adjustViewBounds="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/top_wall"
        android:background="@color/orange" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/bottom_wall"
        android:background="@color/orange"
        android:layout_alignParentBottom="true" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/left_wall"
        android:background="@color/orange"
        android:layout_alignParentEnd="false"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/imageView" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/right_wall"
        android:background="@color/orange"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/imageView" />
</RelativeLayout>
