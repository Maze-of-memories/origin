<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/gray" />
            <!--<stroke
                android:width="1dp"
                android:color="#992f2f" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/darkorange" />
            <!--<stroke
                android:width="1dp"
                android:color="#992f2f" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/orange" />
            <!--<gradient
                android:startColor="@color/red"
                android:endColor="@color/darkred"
                android:angle="270" />-->
            <!--<stroke
                android:width="1dp"
                android:color="#992f2f" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>